<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E16969"
    tools:context=".Activity.SettingActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageSetting"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        app:civ_border_width="2dp"
        android:layout_marginTop="50dp"
        android:padding="5dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/userId"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_below="@id/profileImageSetting"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/userNameTextView"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_below="@id/userId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:id="@+id/l1"
        android:layout_below="@id/userNameTextView"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_setting_linear"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/userNameSetting"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="#DCA2A2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <EditText
            android:id="@+id/bioSetting"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:layout_marginStart="20dp"
            android:background="#DCA2A2"
            android:layout_marginEnd="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveSetting"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textAllCaps="false"
            android:text="Save"
            android:background="@drawable/button_bg"
            android:layout_width="150dp"
            android:layout_marginTop="25dp"
            android:layout_height="50dp"/>

    </LinearLayout>



</RelativeLayout>